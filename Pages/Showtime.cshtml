@page "/Showtimes/Index"
@model ShowtimeModel
@{
    ViewData["Title"] = "Showtimes";
}

<h1>@ViewData["Title"]</h1>

@if (Model != null && Model.Showtimes != null)
{
    <ul id="showul">
        @foreach (var showtime in Model.Showtimes)
        {
            <li id="showli" data-movie-id="@showtime.Id">
                <a href="@Url.Action("BuyTicket", "Ticket", new { showtimeId = showtime.Id })"/>
                <p>Dzień: @showtime.ShowDate.ToString("D")</p>
                <p>Godzina: @showtime.ShowTime.ToString("t")</p>
            </li>
        }
    </ul>
}
else
{
    <p>No showtimes available for this movie.</p>
}

<style>
    #showul {
        list-style: none;
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        margin: 10px;
        justify-content: flex-start;
    }
    
    #showli {
        width: 200px;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 10px;
        background-color: #f5f5f5;
    }
    
    #showli p {
        margin: 5px 0;
        font-size: 14px;
    }
</style>
